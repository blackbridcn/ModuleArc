<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comm_view_layout_bg_ripple"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="@dimen/base_dimen30"
        android:layout_height="@dimen/base_dimen30"
        android:layout_marginLeft="@dimen/base_dimen12"
        android:scaleType="fitXY"
        android:src="@drawable/comm_view_ble_shcutcut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen12"
        android:text="@string/app_name"
        android:textColor="@color/base_text_black"
        android:textSize="@dimen/base_dimen_15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/left_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/base_dimen12"
        android:background="@drawable/comm_view_rounder_rectangle_bg"
        android:paddingRight="@dimen/base_dimen12"
        android:paddingLeft="@dimen/base_dimen12"
        android:paddingTop="@dimen/base_dimen5"
        android:paddingBottom="@dimen/base_dimen5"
        android:text="@string/comm_view_add"
        android:textColor="@color/base_theme_blue"
        android:textSize="@dimen/base_dimen_12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>